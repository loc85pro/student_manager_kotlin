<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_blue"
    android:orientation="vertical"
    tools:context=".ui.student.StudentInfoFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/studentInfo_avt"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30sp"
        android:padding="5dp"

        android:elevation="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_avatar"
        app:shapeAppearanceOverlay="@style/circle"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:elevation="2sp"

        android:background="@drawable/background"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="ID : "
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/main_color_gray_blue" />

            <EditText
                android:id="@+id/studentInfo_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="20120256"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tvStudentInfo_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/main_color_gray_blue"
                android:text="@string/tv_name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <EditText
                android:id="@+id/studentInfo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:elevation="2sp"

                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/roboto_regular"
                android:text="Lê Thừa Phương Cát"
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tvStudentInfo_birthDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/main_color_gray_blue"
                android:text="@string/birthDate" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvStudentInfo_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/main_color_gray_blue"
                android:text="@string/gender" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10sp">

            <EditText
                android:id="@+id/studentInfo_birthDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:elevation="2sp"
                android:padding="10sp"

                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/roboto_regular"
                android:text="21/03/2002"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/studentInfo_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/roboto_regular"
                android:padding="10sp"
                android:text="Nam"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStudentInfo_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/main_color_gray_blue"
            android:text="@string/email" />

        <EditText
            android:id="@+id/studentInfo_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:elevation="2sp"
            android:padding="10sp"

            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/roboto_regular"
            android:text="phuongcat02@gmail.com"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvStudentInfo_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/main_color_gray_blue"
            android:text="@string/address" />

        <EditText
            android:id="@+id/studentInfo_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10sp"
            android:elevation="2sp"
            android:padding="10sp"

            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/roboto_regular"
            android:text="Xa Xuan Truong, huyen Xuan Loc, tinh Dong Nai"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_updateStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:paddingTop="15sp"
            android:paddingBottom="15sp"

            android:background="@drawable/button_bg"
            android:fontFamily="@font/roboto_bold"
            android:text="Chấp nhận"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>