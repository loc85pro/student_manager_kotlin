<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/student_item"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardElevation="0sp"
    app:cardCornerRadius="10sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15sp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/classStudent_avt"
            android:layout_width="90sp"
            android:layout_height="90sp"

            android:scaleType="centerCrop"
            android:src="@drawable/user_avatar"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/studentInClass_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"

            android:fontFamily="@font/roboto_black"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@drawable/class_name_background"
            android:padding="10sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/classStudent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:fontFamily="@font/roboto_medium"
            android:text="Lê Thừa Phương Cát"
            android:textColor="@color/black"
            android:textSize="20sp"

            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/classStudent_avt"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tvClassStudent_gender"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginTop="10sp"

            android:fontFamily="@font/roboto_regular"
            android:src="@drawable/copy_baseline_transgender"
            android:textColor="@color/black"


            app:layout_constraintStart_toStartOf="@+id/classStudent_name"
            app:layout_constraintTop_toBottomOf="@+id/classStudent_name" />

        <TextView
            android:id="@+id/classStudent_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"

            android:ems="2"
            android:fontFamily="@font/roboto_regular"
            android:text="Nam"
            android:textStyle="italic"
            android:textColor="@color/medium_black"
            android:textSize="13sp"

            app:layout_constraintBottom_toBottomOf="@+id/tvClassStudent_gender"
            app:layout_constraintStart_toEndOf="@+id/tvClassStudent_gender"
            app:layout_constraintTop_toTopOf="@+id/tvClassStudent_gender" />

        <ImageView
            android:id="@+id/tvClassStudent_birthDate"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginStart="10sp"

            android:fontFamily="@font/roboto_regular"
            android:src="@drawable/copy_baseline_calendar"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="@+id/tvClassStudent_gender"
            app:layout_constraintStart_toEndOf="@+id/classStudent_gender"
            app:layout_constraintTop_toTopOf="@+id/tvClassStudent_gender" />

        <TextView
            android:id="@+id/classStudent_birthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"

            android:ems="5"
            android:fontFamily="@font/roboto_regular"
            android:text="21/03/2002"
            android:textStyle="italic"
            android:textColor="@color/medium_black"
            android:textSize="13sp"

            app:layout_constraintBottom_toBottomOf="@+id/tvClassStudent_birthDate"
            app:layout_constraintStart_toEndOf="@+id/tvClassStudent_birthDate"
            app:layout_constraintTop_toTopOf="@+id/tvClassStudent_birthDate" />

        <ImageView
            android:id="@+id/tvStudentClass_address"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginTop="5sp"

            android:fontFamily="@font/roboto_regular"
            android:src="@drawable/copy_baseline_location"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="@+id/classStudent_avt"
            app:layout_constraintStart_toStartOf="@+id/tvClassStudent_gender"
            app:layout_constraintTop_toBottomOf="@+id/tvClassStudent_birthDate" />

        <TextView
            android:id="@+id/classStudent_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"

            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:text="Thu Duc, Tp Ho Chi Minh"
            android:textColor="@color/medium_black"
            android:textSize="13sp"
            android:textStyle="italic"

            app:layout_constraintBottom_toBottomOf="@+id/tvStudentClass_address"
            app:layout_constraintStart_toEndOf="@+id/tvStudentClass_address"
            app:layout_constraintTop_toTopOf="@+id/tvStudentClass_address" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>