<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/searchResult_item"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardElevation="5sp"
    app:cardCornerRadius="10sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5sp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/searchResult_avt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"

            android:src="@drawable/user_avatar"
            app:shapeAppearanceOverlay="@style/circle"
            android:scaleType="centerCrop"
            app:strokeWidth="2dp"
            app:strokeColor="@color/main_color_gray_blue"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/searchResult_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"

            android:fontFamily="@font/roboto_medium"
            android:text="Lê Thừa Phương Cát"
            android:textColor="@color/black"
            android:textSize="20sp"

            app:layout_constraintStart_toEndOf="@+id/searchResult_avt"
            app:layout_constraintTop_toTopOf="@+id/searchResult_avt" />

        <TextView
            android:id="@+id/searchResult_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:paddingBottom="5sp"


            android:fontFamily="@font/roboto_regular"
            android:text="20120256"
            android:textColor="@color/medium_black"
            android:textSize="15sp"
            android:maxLines="2"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/searchResult_avt"
            app:layout_constraintTop_toBottomOf="@+id/searchResult_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>