<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/student_item"

    app:cardElevation="0sp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20sp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/studentItem_avt"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:padding="5dp"

            android:scaleType="centerCrop"
            android:src="@drawable/user_avatar"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circle" />

        <TextView
            android:id="@+id/studentItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:fontFamily="@font/roboto_bold"
            android:text="Lê Thừa Phương Cát"
            android:textColor="@color/black"
            android:textSize="20sp"

            app:layout_constraintStart_toEndOf="@+id/studentItem_avt"
            app:layout_constraintTop_toTopOf="@+id/studentItem_avt" />

        <ImageView
            android:id="@+id/tvItem_gender"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_marginTop="10sp"

            android:src="@drawable/copy_baseline_transgender"

            app:layout_constraintStart_toStartOf="@+id/studentItem_name"
            app:layout_constraintTop_toBottomOf="@+id/studentItem_name" />

        <TextView
            android:id="@+id/studentItem_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"

            android:ems="2"
            android:fontFamily="@font/roboto_regular"
            android:text="Nam"
            android:textSize="13sp"
            android:textStyle="italic"
            android:textColor="@color/medium_black"

            app:layout_constraintBottom_toBottomOf="@+id/tvItem_gender"
            app:layout_constraintStart_toEndOf="@+id/tvItem_gender"
            app:layout_constraintTop_toTopOf="@+id/tvItem_gender" />

        <ImageView
            android:id="@+id/tvItem_birthDate"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginStart="15sp"

            android:src="@drawable/copy_baseline_calendar"

            app:layout_constraintBottom_toBottomOf="@+id/studentItem_gender"
            app:layout_constraintStart_toEndOf="@+id/studentItem_gender"
            app:layout_constraintTop_toTopOf="@+id/studentItem_gender" />

        <TextView
            android:id="@+id/studentItem_birthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"

            android:ems="5"
            android:fontFamily="@font/roboto_regular"
            android:text="21/03/2002"
            android:textSize="13sp"
            android:textStyle="italic"
            android:textColor="@color/medium_black"

            app:layout_constraintBottom_toBottomOf="@+id/tvItem_birthDate"

            app:layout_constraintStart_toEndOf="@+id/tvItem_birthDate"
            app:layout_constraintTop_toTopOf="@+id/tvItem_birthDate" />

        <ImageView
            android:id="@+id/tv_ItemEmail"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginTop="10sp"

            android:fontFamily="@font/roboto_regular"
            android:src="@drawable/copy_baseline_email"
            android:text="Email :"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/tvItem_gender"
            app:layout_constraintStart_toStartOf="@+id/tvItem_gender"
            app:layout_constraintTop_toBottomOf="@+id/tvItem_gender" />

        <TextView
            android:id="@+id/studentItem_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"

            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:text="phuongcat02@gmail.com"
            android:textColor="@color/medium_black"
            android:textSize="13sp"
            android:textStyle="italic"

            app:layout_constraintBottom_toBottomOf="@+id/tv_ItemEmail"
            app:layout_constraintStart_toEndOf="@+id/tv_ItemEmail"
            app:layout_constraintTop_toTopOf="@+id/tv_ItemEmail" />

        <ImageView
            android:id="@+id/tv_ItemAddress"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginTop="10dp"

            android:fontFamily="@font/roboto_regular"
            android:src="@drawable/copy_baseline_location"
            android:text="Địa chỉ :"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/tv_ItemEmail"
            app:layout_constraintStart_toStartOf="@+id/tv_ItemEmail"
            app:layout_constraintTop_toBottomOf="@+id/tv_ItemEmail" />

        <TextView
            android:id="@+id/studentItem_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"

            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:text="Thu Duc, Tp Ho Chi Minh"
            android:textColor="@color/medium_black"
            android:textSize="13sp"
            android:textStyle="italic"

            app:layout_constraintBottom_toBottomOf="@+id/tv_ItemAddress"
            app:layout_constraintStart_toEndOf="@+id/tv_ItemAddress"
            app:layout_constraintTop_toTopOf="@+id/tv_ItemAddress" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>