<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"

    android:id="@+id/searchResult_item"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardElevation="2sp"
    app:cardCornerRadius="10sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15sp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/searchResult_avt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="5dp"

            android:src="@drawable/user_avatar"
            app:shapeAppearanceOverlay="@style/circle"
            android:scaleType="centerCrop"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/searchResult_studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"

            android:fontFamily="@font/roboto_bold"
            android:text="Lê Thừa Phương Cát"
            android:textColor="@color/black"
            android:textSize="23sp"

            app:layout_constraintStart_toEndOf="@+id/searchResult_avt"
            app:layout_constraintTop_toTopOf="@+id/searchResult_avt" />

        <TextView
            android:id="@+id/searchResult_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"

            android:fontFamily="@font/roboto_regular"
            android:text="10A1"
            android:textColor="@color/medium_black"
            android:textSize="17sp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="@+id/searchResult_studentName"
            app:layout_constraintStart_toEndOf="@+id/searchResult_studentName" />

        <TextView
            android:id="@+id/tv_studentTranscript1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"

            android:fontFamily="@font/roboto_regular"
            android:text="TBHK1 :"
            android:textColor="@color/black"

            app:layout_constraintStart_toStartOf="@+id/searchResult_studentName"
            app:layout_constraintTop_toBottomOf="@+id/searchResult_studentName" />

        <TextView
            android:id="@+id/searchResult_transcript1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"

            android:fontFamily="@font/roboto_regular"
            android:text="8.3"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="@+id/tv_studentTranscript1"
            app:layout_constraintStart_toEndOf="@+id/tv_studentTranscript1"
            app:layout_constraintTop_toTopOf="@+id/tv_studentTranscript1" />

        <TextView
            android:id="@+id/tv_studentTranscript2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"

            android:text="TBHK2 :"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="@+id/searchResult_transcript1"
            app:layout_constraintStart_toEndOf="@+id/searchResult_transcript1"
            app:layout_constraintTop_toTopOf="@+id/searchResult_transcript1" />

        <TextView
            android:id="@+id/searchResult_transcript2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"

            android:fontFamily="@font/roboto_regular"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="@+id/tv_studentTranscript2"
            app:layout_constraintStart_toEndOf="@+id/tv_studentTranscript2"
            app:layout_constraintTop_toTopOf="@+id/tv_studentTranscript2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>